<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/cornercountry"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvCountry"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="הצבעה"
        android:textSize="35dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

    <Spinner
        android:id="@+id/SCountry"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tvCountry"
        android:layout_centerVertical="true"
        android:layout_marginTop="14dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:background="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_below="@id/SCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/VoteNormal"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="#00232323"
            android:text="רגיל"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            />
        <Button
            android:id="@+id/VoteWhiteCard"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="#00232323"
            android:text="דף לבן"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            />
    </LinearLayout>
</RelativeLayout>